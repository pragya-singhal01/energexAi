{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2017",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noEmit": true,
    "allowImportingTsExtensions": true,
  },
  "include": ["src"]
}